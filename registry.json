{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "@arach",
  "homepage": "https://registry.arach.dev",
  "items": [
    {
      "name": "terminal",
      "type": "registry:style",
      "title": "Terminal Theme",
      "description": "A sophisticated terminal-inspired theme with precision-focused design patterns and comprehensive component styling",
      "files": [
        {
          "path": "registry/terminal/styles/terminal-theme.ts",
          "type": "registry:style",
          "target": "styles/terminal-theme.ts"
        },
        {
          "path": "registry/terminal/css/terminal.css",
          "type": "registry:style",
          "target": "app/globals.css"
        }
      ],
      "cssVars": {
        "light": {
          "background": "0 0% 100%",
          "foreground": "240 10% 3.9%",
          "primary": "192 100% 42%",
          "primary-foreground": "0 0% 100%"
        },
        "dark": {
          "background": "240 10% 3.9%",
          "foreground": "0 0% 98%",
          "primary": "192 100% 42%", 
          "primary-foreground": "240 5.9% 10%"
        }
      }
    },
    {
      "name": "devbar",
      "type": "registry:component",
      "title": "DevBar",
      "description": "Full standalone DevBar component - copy the entire implementation into your project for complete control",
      "dependencies": ["lucide-react"],
      "files": [
        {
          "path": "registry/devbar/devtoolbar.tsx",
          "type": "registry:component",
          "target": "components/devbar/devtoolbar.tsx"
        }
      ]
    },
    {
      "name": "devbar-ui",
      "type": "registry:component",
      "title": "DevBar UI",
      "description": "Customizable UI layer for @arach/devbar - the open code layer you modify while core stays managed via npm",
      "dependencies": ["@arach/devbar"],
      "files": [
        {
          "path": "registry/devbar-ui/devbar.tsx",
          "type": "registry:component",
          "target": "components/devbar-ui/index.tsx"
        }
      ]
    }
  ]
}